{
  "name": "ucan-ts",
  "version": "1.0.0",
  "description": "UCAN TypeScript implementation with v1 support",
  "main": "dist/ucan/v1/index.js",
  "types": "dist/ucan/v1/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/ucan/v1/index.js",
      "types": "./dist/ucan/v1/index.d.ts"
    }
  },
  "type": "module",
  "scripts": {
    "build": "npx tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "dev": "tsx src/server.ts",
    "ucan": "tsx src/cli/toolkit.ts",
    "vectors:local": "tsx scripts/gen-local-vectors.ts > test/fixtures/local-vectors.json",
    "vectors:go:fetch": "tsx scripts/fetch-go-vectors.ts",
    "test:cross": "npm run vectors:go:fetch --silent && vitest run test/crossimpl.spec.ts"
  },
  "bin": {
    "ucan-toolkit": "./dist/cli/toolkit.js"
  },
  "dependencies": {
    "@ipld/car": "^5.2.0",
    "@ipld/dag-cbor": "^9.0.0",
    "commander": "^11.1.0",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "libsodium-wrappers": "^0.7.11",
    "@noble/ed25519": "^2.0.0",
    "multiformats": "^12.1.3",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/libsodium-wrappers": "^0.7.13",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^1.0.0",
    "supertest": "^6.3.3",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
